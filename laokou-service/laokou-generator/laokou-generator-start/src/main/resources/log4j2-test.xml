<!--
    OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL
    monitorInterval: 间隔秒数，自动检测配置文件的变更和重新配置本身
 -->
<Configuration status="INFO" monitorInterval="5">
  <!-- 变量配置 -->
  <Properties>
    <!-- 服务名称 -->
    <property name="APP_NAME" value="laokou-generator"/>
    <!-- 日志格式 -->
    <!--
        %d 日期
        %t 线程
    -->
    <property name="LOG_CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} ---> [${APP_NAME} - ${sys:ip}] - [${ctx:trace-id}] - [${ctx:span-id}] - [ %style{%-5level}{red}] - [%t] - %logger : %msg%n"/>
  </Properties>
  <Appenders>
    <!-- 控制台输出 -->
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="${LOG_CONSOLE_PATTERN}"/>
    </Console>
  </Appenders>
  <Loggers>
    <AsyncLogger name="org.laokou" additivity="FALSE" includeLocation="FALSE" level="INFO">
      <AppenderRef ref="console"/>
    </AsyncLogger>
    <AsyncRoot level="INFO" additivity="FALSE" includeLocation="FALSE">
      <AppenderRef ref="console"/>
    </AsyncRoot>
  </Loggers>
</Configuration>
