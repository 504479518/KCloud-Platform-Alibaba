<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.tenant.mapper.SysTenantSourceMapper">

    <select id="getVersion" resultType="integer">
        select `version` from boot_sys_tenant_source where id = #{id}
    </select>

    <select id="queryTenantSourcePage" resultType="org.laokou.tenant.vo.SysTenantSourceVO">
        select `name`,driver_class_name,url from boot_sys_tenant_source
    </select>

    <select id="queryTenantSourceName" resultType="string">
        select a.`name` from boot_sys_tenant_source a
        JOIN boot_sys_tenant b on b.source_id = a.id
        where b.tenant_id = #{tenantId}
    </select>

    <select id="queryTenantSource" resultType="org.laokou.tenant.vo.SysTenantSourceVO">
        select a.driver_class_name,a.url,a.username,a.password from boot_sys_tenant_source a
        where a.del_flag = 0 and a.name = #{sourceName}
    </select>
</mapper>
