<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.admin.gatewayimpl.database.OperateLogMapper">

    <select id="selectListByCondition" resultType="org.laokou.admin.gatewayimpl.database.dataobject.OperateLogDO">
        select id
             , `name`
             , module_name
             , uri
             , method_name
             , request_type
             , request_params
             , user_agent
             , ip
             , address
             , `status`
             , operator
             , error_message
             , take_time
             , create_date
        from boot_sys_operate_log
        where del_flag = 0
        <if test="operate.moduleName != null and operate.moduleName != ''">
            and `module_name` like #{operate.moduleName}
        </if>
        <if test="operate.status != null">
            and `status` = #{operate.status}
        </if>
        order by id desc
        limit ${pageQuery.pageIndex},${pageQuery.pageSize}
    </select>

    <select id="selectCountByCondition" resultType="java.lang.Long">
        select count(1)
        from boot_sys_operate_log
        where del_flag = 0
        <if test="operate.moduleName != null and operate.moduleName != ''">
            and `module_name` like #{operate.moduleName}
        </if>
        <if test="operate.status != null">
            and `status` = #{operate.status}
        </if>
    </select>

    <select id="resultCountFilter" resultType="java.lang.Integer">
        select count(1)
        from boot_sys_operate_log
        where del_flag = 0
        <if test="param.moduleName != null and param.moduleName != ''">
            and `module_name` like #{param.moduleName}
        </if>
        <if test="param.status != null">
            and `status` = #{param.status}
        </if>
    </select>

    <select id="resultListFilter" fetchSize="10000" resultSetType="FORWARD_ONLY" resultType="org.laokou.admin.gatewayimpl.database.dataobject.OperateLogDO">
        select id
        , `name`
        , module_name
        , uri
        , method_name
        , request_type
        , request_params
        , user_agent
        , ip
        , address
        , `status`
        , operator
        , error_message
        , take_time
        , create_date
        from boot_sys_operate_log
        where del_flag = 0
        <if test="param.moduleName != null and param.moduleName != ''">
            and `module_name` like #{param.moduleName}
        </if>
        <if test="param.status != null">
            and `status` = #{param.status}
        </if>
        order by id desc
    </select>

</mapper>