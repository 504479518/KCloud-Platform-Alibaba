<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.admin.gatewayimpl.database.SourceMapper">

    <select id="selectListByCondition" resultType="org.laokou.admin.gatewayimpl.database.dataobject.SourceDO">
        select id
              ,`name`
              ,driver_class_name
              ,url
              ,username
        from boot_sys_source
        where del_flag = 0
        <if test="source.name != null and source.name != ''">
            and `name` like #{source.name}
        </if>
        order by id desc
        limit ${pageQuery.pageIndex},${pageQuery.pageSize}
    </select>
    <select id="selectCountByCondition" resultType="java.lang.Long">
        select count(1)
        from boot_sys_source
        where del_flag = 0
        <if test="source.name != null and source.name != ''">
            and `name` like #{source.name}
        </if>
    </select>
    <select id="selectVersion" resultType="integer">
        select version from boot_sys_source where id = #{id}
    </select>
</mapper>
