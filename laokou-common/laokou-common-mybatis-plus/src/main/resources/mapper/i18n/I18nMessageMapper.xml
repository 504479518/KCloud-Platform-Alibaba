<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.laokou.common.mybatisplus.mapper.I18nMessageMapper">
  <select id="selectListByCode" resultType="org.laokou.common.mybatisplus.mapper.I18nMessagePO">
    select "code" as code, 'zh' as lang, "zh_message" as message
    from boot_sys_i18n_message
    <where>
      del_flag = 0
      <if test="code != '' and code != null">
        and "code" = #{code}
      </if>
    </where>
    union all
    select "code" as code, 'en' as lang, "en_message" as message
    from boot_sys_i18n_message
    <where>
      del_flag = 0
      <if test="code != '' and code != null">
        and "code" = #{code}
      </if>
    </where>
  </select>
</mapper>
